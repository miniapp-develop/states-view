page, .container {
    height: 100%;
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.tabs {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tab {
    flex: 1;
    padding: 20px 0;
    text-align: center;
    background: #e4e4e4;
}

.states-view {
    flex: 1;
}

.states-ui-class {
    height: 100%;
    border: 1px solid red;
}

.state-ui-class {
    height: 50%;
    border: 1px solid blue;
}