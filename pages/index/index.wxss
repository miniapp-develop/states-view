page, .container {
    height: 100%;
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.tabs {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tab {
    flex: 1;
    padding: 20px 0;
    text-align: center;
    background: cadetblue;
}

.states-view {
    flex: 1;
}

.states-ui-class {
    height: 100%;
    background: coral;
}

.state-ui-class {
    height: 50%;
    background: gainsboro;
}

.state-ui-class-2 {
    height: 50%;
    background: aliceblue;
}

.nested {
    width: 80vw;
    margin: 50rpx auto;
    box-shadow: #00000088 10rpx 10rpx;
}