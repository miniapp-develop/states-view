<view class="page-wrapper">
    <view class="header">
        StatesView/StateView 演示
    </view>
    <states-view class="outer-states-view"
                 ui-class="states-view-ui-class"
                 state="{{pageState}}">
        <loading state="page-loading" ui-class="page-loading" bind:stateChanged="onPageStateChanged"/>
        <state-view state="page-fail" ui-class="page-fail">
            <view class="fail-txt">加载失败</view>
            <button type="warn" bind:tap="onTapRetry">重试</button>
        </state-view>
        <state-view state="page-empty" ui-class="page-empty">
            <view>page-empty</view>
            <button type="primary" bind:tap="onTapReload">重新加载</button>
        </state-view>
        <state-view ui-class="page-content" state="page-content">
            <view>
                <button bind:tap="onTapClear">清空</button>
            </view>
            <view class="scroll-wrapper">
                <scroll-view class="content-list"
                             scroll-y="true"
                             bind:refresherpulling="onPulling"
                             refresher-enabled="true"
                             refresher-triggered="{{contentState === 'content-loading'}}">
                    <view wx:for="{{list}}" wx:key="index" class="content-item">{{item.name}}</view>
                </scroll-view>
            </view>
        </state-view>
    </states-view>
</view>